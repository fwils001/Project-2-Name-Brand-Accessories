<%- include('./partials/header.ejs') %>
<head>
    <h1>Flannery's Name Brand Accessories</h1>
    <nav>
            <a href="/items/new">| add item |</a>

            <a href="/">| see index |</a>

            <a href="/items/welcome">| welcome |</a> 
            
      </nav>
</head>
<link rel="stylesheet" type="text/css" href="/css/style.css"/>

<body>
    <div id="designers"> 
        
        <img id="designer" src="https://imgur.com/UlxP5sq.jpg">
    </div>

    <ul class="items">
        <% for(let i = 0; i < items.length; i++) { %>
            <li>
               <a href="/items/<%= i %>"> <%=items[i].name%> </a>
                <br>
               <a href="/items/<%= i %>"> <%=items[i].img%> </a>
               <br>
               <a href="/items/<%= i %>"> <%=items[i].color%> </a>
               <br>
               <a href="/items/<%= i %>"> <%=items[i].description%> </a>
               <br>
               <a href="/items/<%= i %>"> <%=items[i].price%> </a>
               <br>
               <a href="/items/<%= i %>/edit">(Edit)</a>

               <form action="/items/<%= i %>?_method=DELETE" method="POST">
                <button>Delete</button>
              </form>
            </li>
       <% } %>

    </ul>

</body>

